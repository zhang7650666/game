{
    "presets": [
        [
            "env",
            {
                "modules": false,
                "targets": {
                    "browsers": ["> 1%", "last 2 versions", "not ie <= 8"]
                }
            }
        ],
        ["es2015", { "modules": false }],
        "stage-2"
    ],
    "plugins": [
        [
            "import",
            {
                "libraryName": "vant",
                "libraryDirectory": "es",
                "style": true
            }
        ],
        "transform-runtime",
        "syntax-dynamic-import"
    ]
}
